function autoPublish(platform, content) {

  if (!platform || !content) {
    return "Platform & content required";
  }

  let publishMessage = "";

  if (platform === "facebook") {
    publishMessage = `
ðŸ“¢ Facebook Post Ready:
${content.caption}

${content.description}
`;
  }

  if (platform === "youtube") {
    publishMessage = `
ðŸŽ¬ YouTube Video Ready:
Title: ${content.caption}

Description:
${content.description}
`;
  }

  if (platform === "instagram") {
    publishMessage = `
ðŸ“¸ Instagram Post:
${content.caption}
#trending #viral
`;
  }

  return publishMessage;
}

// Example usage
const content = {
  caption: "Learn Online Business",
  description: "Complete guide for beginners"
};

console.log(autoPublish("facebook", content));

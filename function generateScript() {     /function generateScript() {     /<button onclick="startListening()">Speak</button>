<button onclick="startListening()">Speak</button>
<p id="output"></p>

<script>
const recognition = new (window.SpeechRecognition || window.webkitSpeechRecognition)();
recognition.lang = "ur-PK";

function startListening() {
  recognition.start();
}

recognition.onresult = function(event) {
  const userVoice = event.results[0][0].transcript;
  document.getElementById("output").innerText = "You said: " + userVoice;

  const aiReply = generateReply(userVoice);
  speak(aiReply);
};

function generateReply(text) {
  return `Ø¢Ù¾ Ù†Û’ Ú©ÛØ§: ${text}. ÛŒÛ Ø§ÛŒÚ© Ø¢Ù¹Ùˆ ÙˆØ§Ø¦Ø³ Ø³Ø³Ù¹Ù… ÛÛ’Û”`;
}

function speak(message) {
  const speech = new SpeechSynthesisUtterance(message);
  speech.lang = "ur-PK";
  window.speechSynthesis.speak(speech);
}
</script>

